<script>
  // Code block sourced from lecture videos Week 13
  // New variable to store the final total
    let finalCost = 0;
    // loops over the session storage
    for (i = 0; i < sessionStorage.length; i++) {
      // Gets products and their info that were saved in session storage;
      let product = sessionStorage.key(i);
      let content = JSON.parse(sessionStorage.getItem(product));
      // Calculates the total cost for the current item
      let totalItemCost = content.quan * content.p;
      // finalCost var updated
      finalCost += totalItemCost
  
      // If the quantity is greater than 0, get the item details
      if(content.quan > 0){
        //retrieved by getting the id and inputted the following item info
        document.getElementById("Cart-items").innerHTML += 
        '<br>' +
        "Name: " + '&nbsp;' + 
        product + '&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;' + 
        "Quantity: " + '&nbsp;' + 
        content.quan + '&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;' + 
        "Price: " + '&nbsp;' + 
        content.p + '&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;' + 
        "Item Total: " + '&nbsp;' + 
        totalItemCost + '<br>';
      }
      // Show the final order total
      document.getElementById("orderTotal").innerHTML = finalCost      
    }
  </script>

