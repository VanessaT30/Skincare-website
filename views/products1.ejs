<!-- Single product card sourced from: https://mdbootstrap.com/docs/standard/extended/product-cards/ -->
<!-- Style and information slightly modified -->
    <section >

        <div class="title">PRODUCT DETAILS</div>
        <!-- Container for the product details, with padding on the y-axis -->
      <div class="container py-5">
        <!-- Div to center the content -->
        <div class="row justify-content-center">
           <!-- Column for the product card, for medium to extra large screens -->
          <div class="col-md-8 col-lg-6 col-xl-4">
             <!-- Card displaying product details -->
            <div class="card">
               <!-- Image section with path to each unique product chosen from the database-->
              <div class="bg-image hover-overlay ripple ripple-surface ripple-surface-light"
                data-mdb-ripple-color="light">
                 <!-- Product image with rounded top corners -->
                <img src="images/products/<%= myImage %>"
                  style="border-top-left-radius: 15px; border-top-right-radius: 15px;" class="img-fluid"
                  alt="" />
                <a href="#!">
                  <div class="mask"></div>
                </a>
              </div>
              <!-- Card body section for product and rating -->
              <div class="card-body pb-0">
                  <!-- Flex container for product name and rating -->
                <div class="d-flex justify-content-between">
                  <!-- Product name -->
                  <div class="text-dark" style="font-weight: 600;">
                    <p id="product"><%= myMessage %></p>
                  </div>
                   <!-- Rating section -->
                  <div>
                    <p class="small text-muted">Rated 4.8/5</p>
                  </div>
                </div>
              </div>
              <hr class="my-0" />
              <div class="card-body pb-0">
                <!-- Flex container for price and quantity selection -->
                <div class="d-flex justify-content-between">
                  <!-- Product price -->
                  <p class="text-dark" style="font-weight: 600;" id="price"><%= price %></a></p>
                  <!-- Dropdown for quantity wanted -->
                  <select name="quantity" id="quantity">
                    <option value="0">0</option>
                     <option value="1" selected>1</option> <!-- Automatically selects 1 product -->
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                  </select>
                </div>
              </div>
              <!-- separates sections -->
              <hr class="my-0" />
              <!-- Flex container for Cancel and Add to Cart buttons -->
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center pb-2 mb-1">
                  <!-- Cancel button, redirects to home page -->
                  <a href="/" class="text-dark fw-bold">Cancel</a>
                  <!-- Add to Cart button with onclick event to add item to cart -->
                  <button  type="button" data-mdb-button-init data-mdb-ripple-init 
                  class="btn btn-primary" style="background-color: #11752e; color: #ffffff;" 
                  onclick="addToCart()">Add to Cart</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
